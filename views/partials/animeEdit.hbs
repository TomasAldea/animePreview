<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Edit Anime
      </h1>
      <form action="{{action}}" method="{{method}}">
          <input type="text" name= "_method"value="{{restMethod}}" hidden>
        <div class="form-group">
          <label for="name">Title</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter title" value="{{name}}" />
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <input type="text" id="category" name="category" class="form-control" placeholder="Enter category" value="{{category}}" />
        </div>
        <div class="form-group">
          <label for="rate">Rate</label>
          <input type="text" id="rate" name="rate" class="form-control" placeholder="Enter Rate" value="{{rate}}" />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" id="description" name="description" class="form-control" placeholder="Description" value="{{description}}" />
        </div>

        <button type="{{btnText}}" class="btn btn-primary btn-block">
          Edit anime
        </button>
    </div>